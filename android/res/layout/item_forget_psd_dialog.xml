<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#F3F3F3" >
    <ImageView 
        android:id="@+id/forget_psd_dialog_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:layout_gravity="right|top"
        android:src="@drawable/icon_close"/>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="注册手机号码"
            android:textSize="20sp"/>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_shape" >

            <EditText
                android:id="@+id/forget_psd_dialog_new_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/forget_psd_dialog_see_psd"
                android:layout_toRightOf="@+id/imageView1"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:textColor="#000000" >
            </EditText>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_psd" />

            <ImageView
                android:id="@+id/forget_psd_dialog_see_psd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/imageView1"
                android:src="@drawable/icon_eye" />

        </RelativeLayout>

        <TextView 
            android:id="@+id/forget_psd_dialog_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:text="格式错误，请输入6-20位数字与字母组合"
            android:textColor="#D25B47"/>
        
        <Button 
            android:id="@+id/forget_psd_dialog_confrim"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_shape_yellow"
            android:text="确认发送"
            android:textColor="#ffffff"/>
        
        <Button 
            android:id="@+id/forget_psd_dialog_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/btn_shape_red"
            android:text="取消"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>
