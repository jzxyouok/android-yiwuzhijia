<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0" >
    <include 
		layout="@layout/titlebar"/>
		    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="#ffffff">
		        <LinearLayout 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1.0"
		            android:layout_marginTop="32dp"
		            android:layout_marginBottom="32dp"
		            android:layout_marginLeft="24dp"
		            android:orientation="vertical">
		            <RelativeLayout
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content" >
					    <TextView 
						     android:id="@+id/evaluate_manager_age_text"
						     android:layout_width="wrap_content"
						     android:layout_height="wrap_content"
						     android:text="销龄："
						     android:textColor="#F70000"/>
				
					    <TextView
					        android:id="@+id/evaluate_manager_age"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignParentTop="true"
					        android:layout_toRightOf="@+id/evaluate_manager_age_text"
					        android:text="" />
					</RelativeLayout>
		            
		            <RelativeLayout
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content" >
					    <TextView 
						     android:id="@+id/evaluate_manager_from_text"
						     android:layout_width="wrap_content"
						     android:layout_height="wrap_content"
						     android:text="籍贯："
						     android:textColor="#F70000"/>
				
					    <TextView
					        android:id="@+id/evaluate_manager_from"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignParentTop="true"
					        android:layout_toRightOf="@+id/evaluate_manager_from_text"
					        android:text="" />
					</RelativeLayout>
		            
		            <RelativeLayout
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content" >
					    <TextView 
						     android:id="@+id/evaluate_manager_car_text"
						     android:layout_width="wrap_content"
						     android:layout_height="wrap_content"
						     android:text="专车："
						     android:textColor="#F70000"/>
				
					    <TextView
					        android:id="@+id/evaluate_manager_car"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignParentTop="true"
					        android:layout_toRightOf="@+id/evaluate_manager_car_text"
					        android:text="" />
					</RelativeLayout>
					
		            <RelativeLayout
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1.0" >
	
			            <TextView
			                android:id="@+id/evaluate_manager_selling_text"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="销售："
			                android:textColor="#F70000" />
	
			            <TextView
			                android:id="@+id/evaluate_manager_selling"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentTop="true"
			                android:layout_toRightOf="@+id/evaluate_manager_selling_text" />
			        </RelativeLayout>
		        </LinearLayout>
		        
		        <com.BeeFramework.view.WebImageView 
		            android:id="@+id/evaluate_manager_img"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1.0"
		            android:src="@drawable/ic_launcher"/>
		    </LinearLayout>    
		
		    <LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="16dp"
		        android:background="#ffffff" >
		 		    <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="8dp"
			        android:layout_marginLeft="16dp"
			        android:layout_marginRight="16dp"
			        android:layout_marginBottom="16dp" >
			
			        <TextView
			            android:id="@+id/evaluate_manager_pick_up_ratingbar_level"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:gravity="center_vertical"
			            android:layout_marginLeft="16dp"
			            android:text="0.0分"
			            android:textColor="#000000"
			            android:textSize="14sp" />
			
			        <TextView
			            android:id="@+id/evaluate_manager_pick_up_text"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_toLeftOf="@+id/evaluate_manager_pick_up_ratingbar"
			            android:text="经纪人买房接送服务"
			            android:textColor="#808080"
			            android:textSize="14sp" />
			
			        <RatingBar
			            android:id="@+id/evaluate_manager_pick_up_ratingbar"
			            style="@style/MyRatingBar"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			           
			            android:isIndicator="false"
			            android:layout_marginLeft="8dp"
			            android:layout_toLeftOf="@+id/evaluate_manager_pick_up_ratingbar_level"
			            android:numStars="5" 
			            android:stepSize="1"
			            />
			    </RelativeLayout>
			
			    <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="16dp"
			        android:layout_marginRight="16dp"
			        android:layout_marginBottom="16dp" >
			
			        <TextView
			            android:id="@+id/evaluate_manager_evaluate_ratingbar_level"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:gravity="center_vertical"
			            android:layout_marginLeft="16dp"
			            android:text="0.0分"
			            android:textColor="#000000"
			            android:textSize="14sp" />
			
			        <TextView
			            android:id="@+id/evaluate_manager_evaluate_text"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_toLeftOf="@+id/evaluate_manager_evaluate_ratingbar"
			            android:text="经纪人楼盘评估服务"
			            android:textColor="#808080"
			            android:textSize="14sp" />
			
			        <RatingBar
			            android:id="@+id/evaluate_manager_evaluate_ratingbar"
			            style="@style/MyRatingBar"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentTop="true"
			            android:layout_marginLeft="8dp"
			            android:isIndicator="false"
			            android:layout_toLeftOf="@+id/evaluate_manager_evaluate_ratingbar_level"
			            android:numStars="5"
			             android:stepSize="1" />
			    </RelativeLayout>
			    
			    <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="16dp"
			        android:layout_marginRight="16dp"
			        android:layout_marginBottom="8dp" >
			
			        <TextView
			            android:id="@+id/evaluate_manager_dress_ratingbar_level"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:gravity="center_vertical"
			            android:layout_marginLeft="16dp"
			            android:text="0.0分"
			            android:textColor="#000000"
			            android:textSize="14sp" />
			
			        <TextView
			            android:id="@+id/evaluate_manager_dress_text"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_toLeftOf="@+id/evaluate_manager_dress_ratingbar"
			            android:text="经纪人服装整齐服务"
			            android:textColor="#808080"
			            android:textSize="14sp" />
			
			        <RatingBar
			            android:id="@+id/evaluate_manager_dress_ratingbar"
			            style="@style/MyRatingBar"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentTop="true"
			            android:layout_marginLeft="8dp"
			            android:isIndicator="false"
			            android:layout_toLeftOf="@+id/evaluate_manager_dress_ratingbar_level"
			            android:numStars="5"
			            android:stepSize="1" />
			    </RelativeLayout>
			</LinearLayout>
			
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginTop="16dp"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp">
		        <EditText
		            android:id="@+id/evaluate_manager_text"
		            android:layout_width="fill_parent"
		            android:layout_height="120dp"
		            android:background="#ffffff"
		            android:gravity="left"
		            android:padding="8dp"
		            android:hint="亲，给经纪人或易屋之家一点建议，我们会更加努力，提供优质服务"
		            android:inputType="text"
		            android:imeActionLabel="完成"
		            android:imeOptions="actionDone"
		            android:textColor="#000000"
		            android:textSize="12sp" />

		        <Button
		            android:id="@+id/evaluate_manager_submit"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_below="@id/evaluate_manager_text"
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentLeft="true"
		            android:layout_marginTop="16dp"
		            android:layout_marginBottom="16dp"
		            android:background="@drawable/btn_shape_light_gray"
		            android:text="提交"
		            android:textColor="#ffffff" />
		    </RelativeLayout>
	    </LinearLayout>
    </ScrollView>
</LinearLayout>
