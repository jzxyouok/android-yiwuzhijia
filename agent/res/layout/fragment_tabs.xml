<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="#ffffff" >
    <TextView 
	    android:id="@+id/tabs_trending_client"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1.0"
	    android:gravity="center_horizontal"
	    android:background="@drawable/tabs_shape_select"
	    android:text="意向客户"
	    android:textSize="14sp"
	    android:textColor="#ffffff"/>
    
    <TextView 
        android:id="@+id/tabs_important_client"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:background="@drawable/tabs_shape_unselect"
        android:text="重点客户"
        android:textSize="14sp"
        android:textColor="#F4830B"/>
    
    <TextView 
		android:id="@+id/tabs_success_client"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1.0"
		android:gravity="center_horizontal"
		android:background="@drawable/tabs_shape_unselect"
		android:text="成交客户"
		android:textSize="14sp"
        android:textColor="#F4830B"/>
    
    <TextView 
        android:id="@+id/tabs_invalid_client"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:background="@drawable/tabs_shape_unselect"
        android:text="无效客户"
        android:textSize="14sp"
        android:textColor="#F4830B" />
</LinearLayout>
