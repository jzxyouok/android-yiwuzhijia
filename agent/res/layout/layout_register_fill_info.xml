<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/register_fill_info_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/register_region_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/register_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                
                android:text="选择所在地区"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/register_region_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:layout_weight="0.3"
                android:gravity="right|center_vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
              
                android:text="成都"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:src="@drawable/icon_arrow_right_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:src="@drawable/icon_phone" />

            <EditText
                android:id="@+id/login_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:hint="请输入手机号"
                android:textColor="#000000"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="14sp" >
            </EditText>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp" >

            <EditText
                android:id="@+id/activity_register_cerifycode"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/activity_register_send_cerifycode"
                android:background="@drawable/edit_text_shape"
                android:gravity="center_vertical"
                android:inputType="number"
                android:hint="请输入验证码"
                android:paddingLeft="28dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/activity_register_send_cerifycode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/activity_register_cerifycode"
                android:layout_alignBottom="@+id/activity_register_cerifycode"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_shape_heavy_red"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_register_filinfo_inputcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:text="亲收不到验证码？稍后试试"
            android:textColor="#ADADAD"
            android:textSize="12sp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/activity_register_registcode_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edit_text_shape" >

            <TextView
                android:id="@+id/activity_register_registcode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="推荐码"
                android:textSize="14dp" 
                android:background="#ffffff"/>

            <EditText
                android:id="@+id/activity_register_registcodecode"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/activity_register_registcode_text"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="请输入易屋经纪人推荐码"
                android:inputType="number"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
           	android:layout_marginTop="12dp"
           	android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edit_text_shape" 
            >

            <EditText
                android:id="@+id/activity_register_filinfo_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/activity_register_filinfo_see_psd"
                android:layout_toRightOf="@+id/imageView2"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="14dp" >
            </EditText>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_psd" />

            <ImageView
                android:id="@+id/activity_register_filinfo_see_psd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView2"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_eye" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_register_filinfo_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="格式错误，密码位数应在六位以上"
            android:textColor="#D25B47"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/register_name_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/register_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:background="#ffffff"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:text="性别"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/register_female_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/register_female_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_unselect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="4dp"
                    android:text="女士"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_male_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/register_female_wrapper"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/register_male_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_select" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:text="男士"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/btn_shape_heavy_red"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ffffff" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" >

            <TextView
                android:id="@+id/register_deal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="注册代表你同意  " />

            <TextView
                android:id="@+id/register_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/register_deal_text"
                android:text="《易屋之家协议》"
                android:textColor="#245AAA" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>