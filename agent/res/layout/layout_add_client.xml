<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/add_client_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_marginLeft="16dp"
            android:text="基本信息"
            android:textColor="#6A6A6C"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="12dp"
                android:paddingTop="12dp" >

                <TextView
                    android:id="@+id/add_client_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="客户姓名："
                    android:textColor="#494949"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/add_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/add_client_name_text"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:hint="请输入客户姓名"
                    android:paddingLeft="8dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="16dp"
                android:background="#E6E6E6" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="12dp"
                android:paddingTop="12dp" >

                <TextView
                    android:id="@+id/add_client_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="客户手机："
                    android:textColor="#494949"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/add_client_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/add_client_contacts"
                    android:layout_toRightOf="@+id/add_client_phone_text"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:hint="请输入客户手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="8dp"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/add_client_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/btn_shape_heavy_orange"
                    android:gravity="center"
                    android:text="通讯录"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="16dp"
                android:background="#E6E6E6" />

            <RelativeLayout
                android:id="@+id/add_client_sex_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/add_client_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/add_client_female_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_unselect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="12dp"
                        android:text="女士"
                        android:textColor="#383838"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_client_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/add_client_female"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/add_client_male_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_select" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="12dp"
                        android:text="男士"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/add_client_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:ems="10"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:text="性别"
                    android:textColor="#494949"
                    android:textSize="16sp" >
                </TextView>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/add_client_dream_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="意向价格："
                android:textColor="#494949"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_client_dream_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/add_client_dream_price_text"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:hint="输入金额"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="#8B8B8B"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/add_client_suggest_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="意向房型："
                android:textColor="#494949"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_client_suggest_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/add_client_suggest_code_text"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:hint=""
                android:paddingLeft="8dp"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="#8B8B8B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="32dp"
            android:text="购房意向"
            android:textColor="#6A6A6C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/add_client_trending_context"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:hint="亲，请简短输入客户基本情况吧，或直接提交"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:textColor="#C4C3C8"
            android:textSize="12sp" />

        <Button
            android:id="@+id/add_client_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_shape_heavy_orange"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="提交"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>